extend ../layouts/common

block content
    h1 
        span.mr-3 Users
        a(href="/users/create",type="button",class="btn btn-primary" ) New
        
    .d-flex.align-items-center
        form(action="/users/search","GET", class="d-flex")
            input(type="text", name="q", class="form-control")
            button(type="button" class="btn btn-primary ml-2") Search
    table.table
        thead
            tr  
                th Avatar
                th Name
                th Phone
                th Actions
        each user in users
            thead
                tr
                    td
                        img(src=user.avatar,width="64")
                    td=user.name
                    td=user.phone
                    //- span &nbsp;
                    td 
                        a.btn.btn-light(href='/users/'+ user.id) View
